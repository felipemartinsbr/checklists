@model checklists.ViewModels.CheckLists.EditarViewModel
@{
    ViewData["Title"] = "Editar CheckList #" + @Model.Id;
}

<div class="mb-2">
    <a class="btn btn-secondary btn-sm" href="/CheckList"> Voltar para listagem </a>
</div>



<div class="card">
<div class="card-header">
    <h2 class="card-title"> Editar CheckList <strong>#@Model.Id</strong></h2>
</div>     
    
<div class="card-body">
    @if (@Model.msgErros != null){
        <ul class="alert alert-danger">
            @foreach (var msgErro in @Model.msgErros){
                <li>@msgErro</li>
            }
        </ul>
    }

    <form action="Editar" method="post">
        
        <div class="form-group">
            <label for="id">Id: </label>
            <input type="text" class="form-control" id="id" name="id" value="@Model.Id" readonly>
        </div>
        
        <div class="form-group">
            <label for="nome">Nome do CheckList: </label>
            <input type="text" class="form-control" id="nome" name="nome" value="@Model.Nome" required>
        </div>
        
        <div class="form-group">
            <input name="confirmar" class="btn btn-primary" type="submit" value="Confirmar Alteração">
        </div>
        
        
        
    </form>
</div>
</div>