@model checklists.ViewModels.CheckLists.AdicionarViewModel
@{
    ViewData["Title"] = "Adicionar um CheckList";
}

<div class="mb-2">
    <a class="btn btn-secondary btn-sm" href="/CheckList"> Voltar para listagem </a>
</div>

<div class="card">
<div class="card-header">
    <h2 class="card-title"> Adicionar Par√¢metros </h2>
</div>
<div class="card-body">
    @if (@Model.msgErros != null){
        <ul class="alert alert-danger">
            @foreach (var msgErro in @Model.msgErros){
                <li>@msgErro</li>
            }
        </ul>
    }
    <form action="Adicionar" method="post">
        <div class="form-group">
            <label for="nome">Nome do CheckList: </label>
            <input type="text" name="nome" id="nome" required>
        </div>
        <div class="form-group">
            <input name="confirmar" class="btn btn-primary" type="submit" value="Adicionar CheckList">
        </div>

    </form>
</div>
</div>