@model checklists.ViewModels.CheckListItems.EditarViewModel

@{
    ViewData["Title"] = "Editar Itens #" + @Model.Titulo;
}

<div class="mb-2">
    <a href="/CheckListItems" class="btn btn-secondary btn-sm">Voltar para Listagem</a>
</div>

<div class="card">
    <div class="card-header">
        <h2 class="card-title">Editar Item @Model.Titulo</h2>
    </div>
    <div class="card-body">
        @if (@Model.msgErros != null)
        {
            <ul class="alert alert-danger">
                @foreach (var msgErro in @Model.msgErros)
                {
                    <li>@msgErro</li>
                }
            </ul>
        }
        
        <form action="Editar/@Model.Id" method="post">
            
            <div class="form-group">
                <label for="titulo">Título: </label>
                <input type="text" name="titulo" id="titulo" value="@Model.Titulo">
            </div>
            
            <div class="form-group">
                <label for="idchecklist">CheckList: </label>
                <select id="idchecklist" name="idchecklist">
                    @if (@Model.CheckList != null)
                    {
                        @foreach (var checkList in @Model.CheckList)
                        {
                            <option value="@checkList.Id">@checkList.Nome</option>
                        }
                    }
                </select>
            </div>
            
            <div class="form-group">
                <label for="subitem">SubItems: </label>
                <select id="subitem" name="subitem">
                    <option value="0">Selecione</option>
                    @if (@Model.CheckListItem != null)
                    {
                        @foreach (var items in @Model.CheckListItem)
                        {
                            <option value="@items.Id">@items.Titulo</option>
                        }
                    }
                </select>
            </div>
            
            <div class="form-group">
                <label for="realizado">Realizado ?</label>
                <select id="realizado" name="realizado">
                    <option value="Sim">Sim</option>
                    <option value="Não">Não</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="dataRealizado">Data da realização: </label>
            </div>
            
            <div class="form-group">
                <input name="confirmar" class="btn btn-primary" type="submit" value="Confirmar">
            </div>
            
        </form>
    </div>
</div>